<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/selector_color" />
            <stroke android:width="1dp" android:color="@color/selector_color" />
            <corners android:radius="6dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/app_color_orange" android:startColor="@color/app_color_orange" />
            <stroke android:width="1dp" android:color="@color/app_color_orange" />
            <corners android:radius="6dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>
